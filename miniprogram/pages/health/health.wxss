/* pages/health/health.wxss */
.top {
  display: flex;
}

.title {
  font-size: 1.5rem;
  font-weight: 600;
  margin: .5rem;
}

.th {
  color: rgb(194, 192, 192);
  margin: 1.2rem 0rem 0rem .4rem;
  font-size: .9rem;
}

/* 00b26a */
.z_message {
  width: 100%;
  /* height: 30rem; */
  background-color: #ffffff;
  position: absolute;
  top: 11rem;
  z-index: 5;
  margin-top: -2rem;
  box-shadow: 0 -.2rem 1rem rgba(0, 0, 0, 0.2);
  padding-top: .8rem;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.columns {
  display: flex;
}

/* #00b26a(绿色) */
.new_message {
  width: 10rem;
  height: 5rem;
  /* background-color: #00b26a; */
  border-radius: .5rem;
  position: relative;
  margin: 1rem .5rem;
  padding-top: 1.2rem;
  background-image: linear-gradient(to right, #00b26a, #71cc69);
}

.arrowhead {
  position: absolute;
  bottom: 0;
  left: 37%;
  width: 0rem;
  height: 0rem;
  border-top: 1rem solid transparent;
  border-bottom: 2rem solid #ffffff;
  border-left: 1rem solid transparent;
  border-right: 1rem solid transparent;
  z-index: 8;
}

.new_built {
  width: 6rem;
  height: 1.5rem;
  margin: auto;
  padding-left: .3rem;
  border-radius: 1rem;
  background-color: transparent;
  border: 2px solid #ffffff;
  color: #ffffff;
  text-align: center;
  padding: .2rem .5rem .2rem 0rem;
}

.new_built:active {
  background-color: rgba(233, 232, 232, 0.2);
}

.ti {
  display: flex;
}

.new_built_msg {
  color: #ffffff;
  margin: -.3rem 1.2rem 0rem 2.7rem;
}

.sex {
  display: inline;
}

.age {
  display: inline;
}

.public_class {
  /* width: 10rem;
  height: 6rem; */
  background-color: rgba(239, 240, 240, .8);
  border-radius: .2rem;
  padding: .5rem;
  margin: 1rem;
}

.public_class:active {
  background-color: rgba(233, 232, 232, 0.4);
}

.weight_title {
  display: block;
  margin: .2rem;
  margin-bottom: -1.2rem;
  margin-right: 6rem;
}

.weight_sum {
  display: inline-block;
  margin: 0rem .3rem;
}

.bmi_sum {
  display: inline-block;
  margin: 0rem .3rem;
}

.weight_sum_m {
  font-size: 1.2rem;
  font-weight: 900;
}

.weight_sum_unit {
  color: rgb(143, 142, 142);
  font-weight: 100;
  margin-left: .1rem;
}

.bmi_sum_m {
  font-size: 1.2rem;
  font-weight: 900;
  display: inline-block;
}

.bmi_sum_unit {
  color: rgb(143, 142, 142);
  font-weight: 100;
  display: inline-block;
  margin-left: .1rem;
}

.sport_sum {
  display: inline-block;
  margin: 0rem .3rem;
  margin-top: 1.3rem;
}

.sport_sum_m {
  font-size: 1.2rem;
  font-weight: 900;
}

.toLogin {
  z-index: 15;
  position: fixed;
  bottom: .5rem;
  background-image: linear-gradient(to right, #00b26a, #71cc69);
  width: 95%;
  height: 4rem;
  left: 50%;
  transform: translateX(-50%);
  border-radius: .3rem;
  background-color: rgba(0, 0, 0, 0.2);
  color: #ffffff;
  padding-left: 1rem;
}

.mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 10;
}

.posts-list {
  display: block;
  background-color: #ffffff;
  margin-top: 1rem;
  padding: .5rem 0 .5rem 0;
  font-size: 1.1rem;
  font-weight: 600;
  box-shadow: 0 -.2rem 1rem rgba(0, 0, 0, 0.2);
}

.__title {
  display: block;
  margin-top: 16rem;
  margin-left: .5rem;
  font-size: 1.5rem;
  font-weight: 600;
}

.__content {
  color: rgb(194, 192, 192);
  margin: 1.2rem 0rem 0rem .4rem;
  font-size: .9rem;
}

.posts-list-title {
  /* display: flex; */
  position: relative;
  font-weight: 600;
  font-size: 1rem;
  margin: 1rem;
}

.comment-icon {
  position: absolute;
  right: 1rem;
  top: 0rem;
}

.follows {
  font-weight: normal;
  font-size: 1rem;
  color: rgb(133, 131, 131);
  margin-left: .7rem;
  margin-top: .5rem;
}

.__btn {
  margin: .2rem;
  display: inline;
}

.__input {
  display: inline;
}

.custom-class-btn {
  width: 100%;
}